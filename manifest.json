{
    "manifest_version": 2,
    "name": "Salesforce Trailhead TTS",
    "description": "Read Salesforce Trailhead articles aloud",
    "version": "1.0",
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab"
    ]
}
